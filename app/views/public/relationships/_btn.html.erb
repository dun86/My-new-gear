<% if current_customer != customer%>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー外す", public_customer_relationships_path(customer.id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", public_customer_relationships_path(customer.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>
