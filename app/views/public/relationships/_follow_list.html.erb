<% if @customers.exists? %>
  <% @customers.each do |customer| %>
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><% if customer.image.present? %>
          <%= link_to public_customer_path(customer) do %>
          <%= image_tag customer.image, size: "100x100",onerror: "this.onerror=null;this.src='/images/no_image.png';" %></br>
          <%= customer.customer_name %>
          <% end %>
          <% end %>
          </td>
          <td>フォロー数: <%= customer.followings.count %></td>
          <td>フォロワー数: <%= customer.followers.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>No User</p>
<% end %>