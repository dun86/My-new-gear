<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, public_post_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.introduction %></td>
        <td><i class="fas fa-comments"></i><%= post.post_comments.count %></td>
        <td><span class="me-2" style="color: red;"><i class="fas fa-heart"></i> <%= post.favorites.count %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
