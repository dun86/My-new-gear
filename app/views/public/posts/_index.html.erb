<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, public_posts_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.introduction %></td>
        <td>コメント数: <!--%= book.book_comments.count %></td>
        <td><-%= render "favorites/btn", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>