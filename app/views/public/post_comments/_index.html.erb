        <td>
          <% if post_comment.customer == current_customer %>
            <%= link_to "Destroy", public_post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger pull-right" %>ã€€<!--remote :true-->
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>