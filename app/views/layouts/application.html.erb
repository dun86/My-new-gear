<!DOCTYPE html>
<html>

    <head>
      <title>My New Gear...</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <!-- FontawesomeのCDNリンクを追加 -->
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
      <!-- Google Fontsのリンクを追加 -->
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Delius+Swash+Caps&display=swap">
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
           <a class="navbar-brand p-3" href="/" alt="...">My New Gear...</a>
      　　　　　　<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>

           <%= form_tag public_customers_path, method: :get do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search for User" %>
            <%= button_tag type: :submit, class: "btn btn-link" do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>

              <%= form_tag public_posts_path, method: :get do %>
                <%= text_field_tag :search, params[:search], placeholder: "Search for Gears" %>
                <%= button_tag type: :submit, class: "btn btn-link" do %>
                  <i class="fas fa-search"></i>
                <% end %>
              <% end %>


            <li class="nav-item">
              <%= link_to '<i class="fas fa-plus"></i> New Gears'.html_safe, public_posts_path, class: 'nav-link text-dark' %>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-sign-out-alt"></i> Log-out'.html_safe, destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-plus"></i> New-post'.html_safe, new_public_post_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-user"></i> Mypage'.html_safe, public_customer_path(current_customer.id), class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-heart"></i> Favarite'.html_safe, public_post_favorites_path(current_customer.id), class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-plus"></i> New Gears'.html_safe, public_posts_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-user-plus"></i> Sign-up'.html_safe, new_customer_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-sign-in-alt"></i> Log-in'.html_safe, new_customer_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
      <footer class="bg-dark text-white pt-5 pb-8">
        <div class="container">
          <div class="row no-gutters">
            <div class="col-md-12 text-center">
              <p>A stylish SNS for sharing your gear and instruments</p>
            </div>
          </div>
          <div class="row no-gutters mt-5">
            <div class="col-md-12 text-center">
              <p>© 2023 My New Gear... All rights reserved.</p>
            </div>
          </div>
        </div>
      </footer>
    </body>
</html>

