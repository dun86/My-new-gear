<div class="container" style="mb: 15vh;">
    <div class="row">&emsp;
        <h3 class="p-3"><span class="header" style="background-color:#EEEEEE">
        &emsp;ジャンル一覧・追加&emsp;<span></h3>
    </div>
    
    <% if admin_signed_in? %>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <%= render 'layouts/errors', obj: @genre %>
        <div class="form-group" style="margin-top: 1vh;">
          <p class="font-weight-bold">&emsp;ジャンル名&emsp;&emsp;
          <%= f.text_field :genre_name,required: true, size:"30%", class: "mb-1" %>&emsp;&emsp;
          <%= f.submit '　新規登録　', class:"btn btn-success btn-md" %>
          </p>
        </div>
    <% end %><br>

  <div class="col-md-5">
    <table class="table table-bordered-inserve">
       <thead class="thead-dark">
        <tr>
          <th style="margin-left: 1vh">ジャンル</th>
          <th colspan="3"></th>
        </tr>
       </thead>

       <tbody>
       <% @genres.each do |genre| %>
        <tr>
          <td class="align-middle">
           <%= genre.genre_name %>
          </td>
          <td>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            <%= link_to "　編集する　", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
          </td>
         </tr>
        <% end %>
        </tbody>
    </table>
    <% end %>
  </div>
</div>